<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".HousingFragment">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="97dp" >

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="17dp"
        android:src="@android:drawable/ic_input_add" 
        android:contentDescription="@string/add"
        android:onClick="addHousePost"/>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/searchHouse"
        android:src="@android:drawable/ic_menu_search" 
        android:contentDescription="@string/search"
        android:onClick="searchHousePost"/>

    <EditText
        android:id="@+id/searchHouse"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="text" />
    <TextView
          android:id="@+id/keywordHouse"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/searchHouse"
          android:layout_below="@+id/searchHouse"
          android:text="@string/keywordHousing"
          android:textSize="12sp"
          android:textColor="@color/grey"
          android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/searchHousingResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/keywordHouse"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey"
        android:textSize="14sp" />

</RelativeLayout>
</LinearLayout>
</ScrollView>