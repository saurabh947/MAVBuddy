<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvanceSearchFragment" >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numOfPerson"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:text="Rent" />

    <Spinner
        android:id="@+id/rent"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignLeft="@+id/numOfPerson"
        android:entries="@array/rent" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/numOfPerson"
        android:layout_alignLeft="@+id/welcome"
        android:layout_marginBottom="17dp"
        android:text="Number of persons" />

    <Spinner
        android:id="@+id/numOfPerson"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/roomFor"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:entries="@array/numOfPerson" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:text="Room for" />

    <Spinner
        android:id="@+id/roomFor"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignParentRight="true"
        android:entries="@array/roomFor" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="21dp"
        android:text="Move-in Date" />

    <EditText
        android:id="@+id/searchDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView03"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_alignLeft="@+id/roomFor"
        android:ems="10"
        android:hint="mm-dd-yy"
        android:imeOptions="actionDone"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchDate"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/TextView03"
        android:text="Search" />

</RelativeLayout>
